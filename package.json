{
  "name": "headlinehub",
  "version": "1.0.0",
  "description": "A modern news aggregation and scraping service.",
  "main": "app.js",
  "scripts": {
    "build": "echo 'Build completed - using serverless functions'",
    "vercel-build": "prisma generate",
    "start": "echo 'This project is now deployed as Vercel serverless functions'",
    "dev:local": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:vercel": "vercel dev",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts api/**/*.ts",
    "lint:fix": "eslint src/**/*.ts api/**/*.ts --fix",
    "prebuild": "npm run clean",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t headlinehub .",
    "docker:run": "docker run -p 3000:3000 --env-file .env headlinehub",
    "docker:dev": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f app",
    "docker:shell": "docker-compose exec app sh",
    "scrape:standalone": "ts-node scripts/scrape-news.ts",
    "webhook:setup": "ts-node scripts/setup-webhook.ts"
  },
  "keywords": [
    "news",
    "scraper",
    "telegram",
    "bot",
    "prisma",
    "gambia"
  ],
  "author": "Ahmed Eyan Jeng",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.12.0",
    "@vercel/node": "^5.3.22",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "copyfiles": "^2.4.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "feed": "^5.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "p-limit": "^3.1.0",
    "pg": "^8.16.3",
    "puppeteer": "^24.15.0",
    "rimraf": "^6.0.1",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.17.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/p-limit": "^2.1.0",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prisma": "^6.12.0",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vercel": "^39.0.0"
  }
}
