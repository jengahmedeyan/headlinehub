{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*", "prisma/**/*"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "ELEVENLABS_API_KEY": "@elevenlabs_api_key",
    "GEMINI_API_KEY": "@gemini_api_key"
  }
}