# Production Environment Variables
# Copy this file to .env.production and update the values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@db:5432/headlinehub-db
PG_HOST=db
PG_PORT=5432
PG_USER=username
PG_PASSWORD=password
PG_DATABASE=headlinehub-db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraper Configuration
SCRAPER_DELAY_MS=1000
SCRAPER_ARTICLE_CONCURRENCY=5
SCRAPER_SOURCE_CONCURRENCY=5
REQUEST_TIMEOUT=30000

# Logging
LOG_LEVEL=info

# Deduplication
DEDUPLICATION_ENABLED=true
DEDUPLICATION_SIMILARITY_THRESHOLD=0.8

# Monitoring
MONITORING_MAX_FAILURE_COUNT=3
MONITORING_ALERT_EMAIL=admin@example.com

# Telegram Bot (if using)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google AI (if using)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ElevenLabs (if using for audio)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
